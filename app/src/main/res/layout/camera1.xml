<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:id="@+id/layout"
    android:orientation="vertical"
    android:background="#1C2428">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick4"
            android:background="@mipmap/menu_opt"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">
        </Button>
        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick5"
            android:background="@mipmap/turn_camera"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginEnd="90dp">

        </Button>
        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick6"
            android:background="@mipmap/flash"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">

        </Button>
    </LinearLayout>
    <FrameLayout android:id="@+id/preview"
        android:layout_weight="1" android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick1"
            android:background="@mipmap/make_sound_button"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">
        </Button>
        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick2"
            android:background="@mipmap/camera"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginEnd="90dp">

        </Button>
        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/buttonClick3"
            android:background="@mipmap/video_button"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp">

        </Button>
    </LinearLayout>
</LinearLayout>